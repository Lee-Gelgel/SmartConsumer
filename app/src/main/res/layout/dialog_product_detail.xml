<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="20dp"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWarmGrey"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/imageview_productimage"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="250dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:text="제품명"
                android:textSize="16sp"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/textview_productname"
                    android:textSize="20sp"
                    android:text=" 칠성사이다"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:text=" 제품설명"
                    android:textSize="16sp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/textview_productinfo"
                    android:textSize="20sp"
                    android:text=" 소화가 안될 때 마시면 한방에.. 코카콜라보다 맛있음.."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:text="상세정보"
                    android:textSize="16sp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/textview_productinfo2"
                    android:textSize="20sp"
                    android:text=" 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 블라블라 "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:text="추천레시피"
                    android:textSize="16sp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_dark"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:background="@android:color/holo_blue_dark"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/btn_close"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp">

        <TextView
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:id="@+id/btn_add_cart"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="장바구니담기"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>